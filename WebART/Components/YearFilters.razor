@foreach (string i in YearCount)
{
    @if (Current_Year_Filter == i)
    {
        background = "cornflowerblue";
    }
    else
    {
        background = "white";
    }
    <button style="background-color: @(background)" @onclick="() => func((string) i)">@i</button>
}
@code {
    [Parameter]
    public EventCallback Year_Search { get; set; }
    List<string> YearCount = new List<string>()
    {@"2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007",
     "2008",  "2009",  "2010",  "2011",  "2012",  "2013" , "2014",
     "2015",  "2016",  "2017",  "2018",  "2019" , "2020"};
    string Current_Year_Filter = "";
    string background = "white";
    void func(string year)
    {
        if (Current_Year_Filter == year)
        {
            Current_Year_Filter = "";
        }
        else
        {
            Current_Year_Filter = year;
        }
        Year_Search.InvokeAsync((string)Current_Year_Filter);
    }
}